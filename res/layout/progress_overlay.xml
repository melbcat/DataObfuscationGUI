<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"

	android:paddingLeft="10dip" android:paddingTop="5dip"
	android:paddingRight="10dip" android:paddingBottom="4dip"
	android:orientation="vertical">
	<LinearLayout android:layout_width="wrap_content"
		android:id="@+id/linearLayout1" android:layout_height="match_parent">
		<LinearLayout android:id="@+id/linearLayout2"
			android:layout_width="0dip" android:layout_marginRight="10dip"
			android:layout_weight="1.0" android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView android:layout_width="wrap_content"
				android:layout_marginBottom="4dip" android:id="@+id/label_import"
				android:textColor="@android:color/white" android:layout_height="wrap_content"
				android:text="@string/titleWaiting"></TextView>
			<ProgressBar android:layout_width="fill_parent"
				android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"
				android:id="@+id/progressBar"></ProgressBar>
		</LinearLayout>
		<Button android:layout_width="wrap_content" android:id="@+id/button_cancel"
			android:text="@string/txtCancel" android:layout_height="wrap_content"
			android:minWidth="100dip"></Button>
	</LinearLayout>
	<TextView android:layout_marginTop="5dip"
		android:layout_marginBottom="4dip" android:textColor="@android:color/white"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:text="@string/txtProgressBar" android:id="@+id/txtProgressBar"></TextView>

</LinearLayout>
